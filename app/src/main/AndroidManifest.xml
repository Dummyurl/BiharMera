<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tv.merabihar.app.merabihar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemes">
        <activity android:name=".UI.Activity.SplashScreen" />
        <activity android:name=".UI.Activity.SlideOptionScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Activity.LoginScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Activity.SignUpScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.Activity.ProfileScreen" />
        <activity
            android:name=".UI.Activity.ContentDetailScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UI.Activity.ContentImageDetailScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UI.Activity.ContentList"></activity>
    </application>

</manifest>