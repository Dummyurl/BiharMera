<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.Activity.LoginScreen">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/gradient_primary">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="35dp"

                android:src="@drawable/app_logo_home"
                app:view_borderWidth="1dp"
                app:view_borderColor="#cccccc"/>




            <tv.merabihar.app.merabihar.CustomFonts.Mistral
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="Login to Explore Bihar in Bihari Style.."
                android:textColor="@color/white"
                android:textSize="26sp"  />

        </LinearLayout>





    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/data"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:background="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@fonts/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="Email Address"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="text"
                        android:id="@+id/user_name"
                        android:textColor="@color/black"
                        android:hint="Email Address"
                        android:textColorHint="@color/text_grey"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:fontFamily="@fonts/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Password"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_grayoutline1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="#00000000"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:hint="Password"
                        android:id="@+id/pwd"
                        android:textColorHint="@color/text_grey"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:fontFamily="@fonts/maven_pro_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/forgot_pwd"
                    android:text="Forgot Password?"
                    android:textColor="#969696"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/loginAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect_primary"
                    android:fontFamily="@fonts/maven_pro_bold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="LOGIN"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/sign_up_screen"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@fonts/maven_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New? "
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:fontFamily="@fonts/maven_pro_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:text="Sign-up "
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:fontFamily="@fonts/maven_pro_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:text="for a new account."
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>