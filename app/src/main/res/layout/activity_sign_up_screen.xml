<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UI.Activity.SignUpScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@fonts/sfnsdisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="नमस्ते बिहार!"
            android:textColor="#d11e48"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="@fonts/maven_pro_regular"
            android:text="Please sign up to explore."
            android:textColor="#444444"
            android:textSize="18dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="#00000000"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Full Name"
            android:id="@+id/full_name"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="@color/text_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:button="@drawable/editext_border"
                android:background="@drawable/radio_btn_selector"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:text="Male"
                android:id="@+id/sign_up_male"
                android:textSize="16sp"
                android:gravity="center"
                />
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:button="@drawable/editext_border"
                android:background="@drawable/radio_btn_selector"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:text="Female"

                android:id="@+id/sign_up_female"
                android:textSize="16sp"
                android:gravity="center"/>
            <RadioButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:button="@drawable/editext_border"
                android:background="@drawable/radio_btn_selector"
                android:textColor="@drawable/rbtn_textcolor_selector"
                android:text="Other"
                android:id="@+id/sign_up_other"
                android:textSize="16sp"
                android:gravity="center"

                />
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Email address"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:textColorHint="@color/text_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Mobile Number"
            android:id="@+id/mobile_number"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="@color/text_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Password"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="@color/text_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Confirm Password"
            android:id="@+id/confirm_password"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:textColorHint="@color/text_grey"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@fonts/roboto_light"
            android:hint="Referal Code(Optional)"
            android:id="@+id/referal_code"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="@color/text_grey" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:textSize="@dimen/veryTinyFont"
                android:textColor="@color/grey_charcoal"
                android:textColorLink="@color/blue_express_delivery"
                android:id="@+id/termsCondition"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/termsConditionText"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:backgroundTint="@color/colorAccent"
                android:layout_gravity="center"
                android:text="@string/terms"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/createAccount"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/circle"
                android:tint="@color/colorPrimary"/>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="22dp"
                android:src="@drawable/whitearrow"/>
        </FrameLayout>

        <TextView
            android:fontFamily="@fonts/VarelaRound-Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/login_screen"
            android:text="Login, if you’ve an Account!"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>

</ScrollView>