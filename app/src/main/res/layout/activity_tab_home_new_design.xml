<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UI.MainTabHostScreens.TabHomeNewDesign">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/theme_combo">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:tabSelectedTextColor="#FF5AC5"
            app:tabMode="fixed"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabIndicatorColor="#FF5AC5"
            android:tabStripEnabled="false"
            app:tabTextColor="#FFFFFF"
            android:id="@+id/main_title_tabs"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/television"
            android:id="@+id/video"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>
    </FrameLayout>


    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_content_vp"/>




</LinearLayout>
