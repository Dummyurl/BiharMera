<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">




    <LinearLayout
        android:layout_width="250dp"
        android:orientation="vertical"
        android:id="@+id/ll_share_something_activity"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/share_something"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:text="Share Something"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:id="@+id/ll_share_gal"
             android:layout_marginTop="25dp"
             android:layout_height="wrap_content">

             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:id="@+id/gallery_post"
                 android:orientation="vertical"
                 android:layout_marginLeft="15dp"
                 android:layout_height="match_parent">

                 <ImageView
                     android:id="@+id/share_using_gallary"
                     android:layout_width="60dp"
                     android:src="@drawable/gallery"
                     android:layout_height="60dp"/>

                 <TextView
                     android:paddingTop="5px"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="  Gallery"

                     />

             </LinearLayout>


             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:id="@+id/youtube_url"
                 android:orientation="vertical"
                 android:gravity="right"
                 android:layout_marginRight="15dp"
                 android:layout_height="match_parent">


                 <ImageView
                     android:id="@+id/share_using_youtube"
                     android:layout_width="60dp"
                     android:src="@drawable/youtube"
                     android:layout_height="60dp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:paddingTop="5px"
                     android:layout_height="wrap_content"
                     android:text="Youtube "

                     />



             </LinearLayout>



         </LinearLayout>

    </LinearLayout>

</LinearLayout>