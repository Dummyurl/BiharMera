<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/collection_lay"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="200dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:gravity="center"
                android:background="@drawable/theme_combo"
                android:orientation="vertical">

                <tv.merabihar.app.merabihar.CustomFonts.MyTextView_Lato_Regular
                    android:id="@+id/target_title"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"


                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="3dp"
                    />

                <tv.merabihar.app.merabihar.CustomFonts.MyTextView_Lato_Regular
                    android:id="@+id/target_des"
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:textSize="15dp"

                    android:textColor="@color/white"
                    android:lineSpacingExtra="3dp"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"

                    android:layout_gravity="bottom|end"
                    android:layout_margin="5dp"
                    android:id="@+id/follow_interest"
                    android:background="@drawable/rect_grayoutline1"
                    android:layout_width="120dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:text="View Details"
                    android:textAllCaps="false"

                    />

            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>