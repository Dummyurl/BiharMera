<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/login_ract"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
             android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signin_popupclose_txt"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:text="X"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="center" />

            <ImageView
                android:id="@+id/signin_popup_image"
                android:src="@drawable/invite_earn"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="0dp"
                android:layout_weight="4"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">

                <Button
                    android:id="@+id/signin_popup_showContent_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/mediatransperent_ract"
                    android:text="Show Content"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/signin_popup_earn_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/mediatransperent_ract"
                    android:text="Earn"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>







