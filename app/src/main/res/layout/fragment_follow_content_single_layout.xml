<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="500dp">

    <!--ll child1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/vf1"
                android:layout_weight="1">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:placeholderImage="@drawable/no_image"
                    app:placeholderImageScaleType="fitXY"
                    android:id="@+id/follow_frag_img_view1"
                    >

                </com.facebook.drawee.view.SimpleDraweeView>


                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="25dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:placeholderImage="@drawable/video_insta"
                    android:layout_gravity="end"
                    app:placeholderImageScaleType="fitXY"
                    android:id="@+id/videoicon1"
                    android:layout_height="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:id="@+id/follow_frag_img_view2"
                    android:scaleType="fitXY"
                    app:placeholderImage="@drawable/no_image"
                    app:placeholderImageScaleType="fitXY"
                    android:layout_height="match_parent"

                    android:layout_marginTop="3dp">

                </com.facebook.drawee.view.SimpleDraweeView>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="25dp"
                    android:layout_margin="2dp"
                    android:scaleType="fitXY"
                    android:id="@+id/videoicon2"
                    android:visibility="gone"
                    app:placeholderImage="@drawable/video_insta"
                    android:layout_gravity="end"
                    app:placeholderImageScaleType="fitXY"
                    android:layout_height="25dp" />
            </FrameLayout>





        </LinearLayout>

        <!--For displaying video thumbnail-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:id="@+id/follow_frag_img_view3"
                android:layout_height="match_parent"
                android:scaleType="fitXY"

                app:placeholderImage="@drawable/no_image"
                app:placeholderImageScaleType="fitXY"
                android:orientation="vertical">
            </com.facebook.drawee.view.SimpleDraweeView>

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="25dp"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:id="@+id/videoicon3"
                android:visibility="gone"
                app:placeholderImage="@drawable/video_insta"
                android:layout_gravity="end"
                app:placeholderImageScaleType="fitXY"
                android:layout_height="25dp" />
        </FrameLayout>



    </LinearLayout>


    <!--ll child1-->
