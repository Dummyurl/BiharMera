<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Video Watched"
                    android:textSize="21sp"
                    android:id="@+id/target_title_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp"
                    android:src="@drawable/coins"/>
            </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:text="Daily video watched reward"
               android:layout_marginLeft="15dp"
               android:id="@+id/target_descr_name"
               android:layout_height="0dp"
               android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="20 Coins"
                android:textAlignment="textEnd"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:paddingRight="15dp"
                android:id="@+id/max_coins_txt"
                android:textStyle="bold"
                android:layout_height="0dp"
                android:layout_weight="1"/>


            <TextView
                android:layout_width="match_parent"
                android:paddingRight="15dp"
                android:id="@+id/earned_date_txt"
                android:textAlignment="textEnd"
                android:text="2018-11-5 14:58:13"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#45151414" />

</LinearLayout>